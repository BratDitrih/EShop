<Window x:Class="E_shopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_shopClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <WrapPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="Email"/>
            <TextBox x:Name="txtEmail" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Password"/>
            <TextBox x:Name="txtPassword" Width="100"/>
        </StackPanel>
        <Button Content="Confirm" Click="Login_Click"/>

        <StackPanel Margin="0,20,0,0">
            <ListBox x:Name="ProductsList"/>
            <Button Content="Refresh" Click="Refresh_Click"/>
        </StackPanel>
    </WrapPanel>
</Window>
